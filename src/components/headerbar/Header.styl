.header
  display flex

.header-menu
  max-width 50vw
  display grid
  grid-template-columns repeat(4, 1fr)
  grid-gap 5px 10px
  list-style-type none

  .header-menu__item
    cursor pointer
    transition all 0.5s ease
    background-color white
    background-position left bottom
    padding 0px 10px
    &:hover
      background black
      background-position right bottom
      color white

@media (max-width: 768px)
  .header-menu
    max-width 100vw
    margin 0 auto
    padding 0